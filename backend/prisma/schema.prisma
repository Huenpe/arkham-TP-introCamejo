generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Criminal {

  id Int @id @default(autoincrement())
  nombre String
  apodo String
  edad Int
  genero String
  delito String
  tratamientoActual String
  celdaAsignada Int
  fechaIngreso String
  nivelRiesgo String
  foto String?
}

model Delito {
  id Int @id @default(autoincrement())
  tipoDelito String
  descripcion String
  fechaDelito String
  sentenciaJudicial String
  lugarDelito String
  estadoDelito String
  nivelPrioridad String


  
  
}

model Celda {
  id Int @id @default(autoincrement())
  tipoCelda String
  descripcionCelda String
  nivelSeguridad String
  camarasSeguridad Int
  sensoresMovimiento Boolean
  alarmas Boolean
  criminalAsignado String
}



